<% include ./partials/header %>
  <div class="row">
    <br>
    <div class="col-md-8 col-md-push-2 col-xs-12">
      <div class="panel panel-default">
        <div class="panel-body">
          <form action="/todo/add" method="post">
            <div class="form-group">
              <label>Todo Name</label>
              <input class="form-control" type="text" name="text" placeholder="add todo">
            </div>
            <div class="form-group">
              <label>Todo Body</label>
              <textarea class="form-control" name="body" placeholder="body text"></textarea>
            </div>
            <button class="btn btn-primary btn-block" type="submit">Submit</button>
          </form>
          <br><br>
          <ul class="list-group">
            <% todos.forEach(function(todo){ %>
              <li class="list-group-item clearfix">
                <%= todo.text %> - <%= todo.body %>
                <a data-id="<%= todo._id %>" href="#" class="pull-right btn btn-danger delete-todo">Delete</a>
                <a class="btn btn-default pull-right" href="/todo/edit/<%= todo._id %>">Edit</a>
              </li>
            <% }) %>
          </ul>
        </div>
      </div>
    </div>
  </div>
<% include ./partials/footer %>
